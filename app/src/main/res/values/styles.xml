<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/vv_blue</item>
        <item name="colorPrimaryDark">@color/vv_blueDark</item>
        <item name="colorAccent">@color/vv_red</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle"
        parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fragment_preference_style</item>
    </style>

    <style name="vv_button">
        <item name="pb_colorNormal">@color/vv_red</item>
        <item name="pb_colorComplete">@color/vv_red</item>
        <item name="pb_colorPressed">@color/vv_red</item>
        <item name="pb_colorProgress">@color/vv_blue</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="vv_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/vv_red</item>
        <item name="fab_colorPressed">@color/vv_red</item>
        <item name="menu_colorNormal">@color/vv_red</item>
        <item name="menu_colorPressed">@color/vv_red</item>
    </style>

</resources>
